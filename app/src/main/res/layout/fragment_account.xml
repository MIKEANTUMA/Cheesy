<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".AccountFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/personalInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="150dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/et_style"
        android:text="Personal Information"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/PaymentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personalInfoBtn"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/et_style"
        android:text="Payment Info"
        android:gravity="center_horizontal"
        android:onClick="Pay"/>
    <Button
        android:id="@+id/AddressBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PaymentBtn"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/et_style"
        android:text="Saved Address"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/AboutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddressBtn"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/et_style"
        android:text="About"
        android:gravity="center_horizontal" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/NotificationSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AboutBtn"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="Notifications"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/LocateSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/NotificationSwitch"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="Location Permission"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>